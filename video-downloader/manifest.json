{
    "manifest_version": 3,
    "name": "視頻下載器",
    "version": "1.0",
    "description": "偵測並下載當前頁面上的所有視頻。",
    "permissions": [
        "activeTab",
        "scripting",
        "downloads",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon-16.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-16.png",
        "128": "icons/icon-16.png"
    }
} 